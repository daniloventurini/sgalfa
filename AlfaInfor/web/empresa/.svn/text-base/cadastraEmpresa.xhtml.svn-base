<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:p="http://primefaces.prime.com.tr/ui"
      xmlns:oi="http://java.sun.com/jsf/facelets"
      >
    <h:head>
        <title>Alfa Informática</title>
        <link type="text/css" rel="stylesheet" href="css/flick/jquery-ui-1.8.9.custom.css" />
        <link type="text/css" rel="stylesheet" href="/AlfaInfor/css/layout.css" />
    </h:head>
    <h:body>

        <div id="cabecalho" >
           
         
        </div>
        <div id="menuCabecalho">
            <oi:include src="/menu.xhtml"/>
           
        </div>


        <div id="menuEsquero" >

        </div>
        <div id="conteudo">

            <center><h:outputText value="Empresa" style="font-size: 26pt" /></center>
<p:panel header="Dados">
            <h:form prependId="false">
                <h:panelGrid id="infosEmpresa" columns="3" style="margin-bottom:10px">
                     
                    <h:outputLabel for="nome" value="Nome: *" />
                    <p:inputText id="nome" value="#{empresaController.empresa.nome}" required="true" requiredMessage="Campo Obrigatório" size="70"/>
                    <p:message for="nome" />




                    <h:outputLabel for="razaoSocial" value="Razao Social: *" />
                    <p:inputText id="razaoSocial" value="#{empresaController.empresa.razaoSocial}" required="true" requiredMessage="Campo Obrigatório" size="70"/>
                    <p:message for="razaoSocial" />
                    <h:outputLabel for="endereco" value="Endereço: *" />
                    <p:inputText id="endereco" value="#{empresaController.empresa.endereco}" required="true" requiredMessage="Campo Obrigatório" size="70"/>
  <p:message for="endereco" />

                    <h:outputLabel for="numero" value="Numero:" />
                    <p:inputText id="numero" value="#{empresaController.empresa.numero}" />
  <p:message for="numero" />
                    <h:outputLabel for="bairro" value="Bairro:" />
                    <p:inputText id="bairro" value="#{empresaController.empresa.bairro}" size="60"/>
  <p:message for="bairro" />
                    <h:outputLabel for="cidade" value="Cidade: *" />
                    <h:selectOneMenu value="#{empresaController.empresa.cidade}" id="cidade" converter="#{empresaController.converterCidade}" required="true" requiredMessage="Campo Obrigatório" >
                        <f:selectItem itemLabel="Selecione" itemDisabled="true"/>
                        <f:selectItems value="#{empresaController.cidades}"/>
                    </h:selectOneMenu>
                      <p:message for="cidade" />

                    <h:outputLabel for="cnpj" value="CNPJ: *" />
                    <p:inputMask id="cnpj" value="#{empresaController.empresa.cnpj}" mask="99.999.999/9999-99" required="true" requiredMessage="Campo Obrigatório">
                        <f:validator validatorId="CnpjValidator"/>
                    </p:inputMask>
                    <p:message for="cnpj" />

                    <h:outputLabel for="inscricao" value="Inscrição Estadual: *" />
                    <p:inputText id="inscricao" value="#{empresaController.empresa.inscricao}" required="true" requiredMessage="Campo Obrigatório" size="60"/>
                    <p:message for="inscricao" />


                    <h:outputLabel for="telefone" value="Telefone:" />
                    <p:inputMask id="telefone"  value="#{empresaController.empresa.telefone}" mask="(99)9999-9999">
                     </p:inputMask>
                      <p:message for="telefone" />
                    <h:outputLabel for="fax" value="Fax:" />
                    <p:inputMask id="fax" value="#{empresaController.empresa.fax}" mask="(99)9999-9999">
                     
                    </p:inputMask>
                    <p:message for="fax" />

                    <h:outputLabel for="email" value="E-mail:" />
                    <p:inputText id="email" value="#{empresaController.empresa.email}" size="50" />
                    <p:message for="email" />




                </h:panelGrid>
                <p:commandLink actionListener="#{empresaController.salvarEmpresa}"  ajax="false"  update="cnpj">
                        <p:graphicImage value="/css/imagens/Salvar_1.png"/>
                    </p:commandLink>
                    <p:commandLink action="/index" immediate="true" ajax="false" >
                        <p:graphicImage value="/css/imagens/cancelar.png"/>
                    </p:commandLink>


            </h:form>

</p:panel>
        </div>
        <div id="menuDireito" >


        </div >

        <div id="rodape" >


        </div>





    </h:body>
</html>


